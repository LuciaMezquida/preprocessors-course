-var title = "Titulo Principal"
-var subtitles = ['Subtitulo 1', 'Subtitulo 2', 'Subtitulo 3']
-var user = ""

mixin box(image, title, content)
  .box 
    .box__image: img(src="../images/"+image, alt="Pug image")
    .box__contents 
      h3= title
      p= content
      a.button Leer más

doctype html 
html 
  head 
    meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
    link(rel="stylesheet", href="../css/example-pug.css")

  body
    header 
      h1 Pug Rules 
      if user 
        a Hola #{user}
      else
        a.button Registro

    section.intro
      .intro__image: img(src="../images/pug-image.jpeg", alt="Pug image")
      .intro__contents 
        h2 #{title} 
        p
          | Lorem ipsum dolor sit amet consectetur adipisicing elit. 
          | Non nulla consequuntur ab magnam necessitatibus omnis 
          | deleniti eaque fuga quos. Unde maiores dolor quia 
          | laudantium nulla, nesciunt iure id?
          span Lorem ipsum dolor sit amet consectetur adipisicing.
        a.button Leer más
      
    main.contents 
      each item in subtitles
        +box('pug-image.jpeg', item, 'Lorem ipsum dolor sit amet')
    

