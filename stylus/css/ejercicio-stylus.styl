* 
	box-sizing: border-box

body
	margin: 0
	font-family: 'Lato', sans-serif

.buscador
	width: 100%
	height: 250px
	padding: 100px
	background-image: url("../../images/cover.jpg")
	background-size: cover
	text-align: center
	&__input
		width: 75%
		height: 60px
		padding: 20px
		border: none 
		border-radius: 30px
		font-size: 25px

.encabezado--con-filtrs
  display: flex
  width: 90%
  margin: 0 auto
  padding: 30px 0
  h2
    margin-top: 10px
    text-transform: uppercase
    font-weight: 500
    font-size: 50px
  .filtros
    width: 250px
    height: 75px
    padding: 20px
    margin-left: auto
